# Fodors EditorConfig
# http://EditorConfig.org
root = true

[*.{html,css,scss}]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

# Mustache Templates use .tmpl extension
[*.{tmpl,mustache}]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{js,json,mjs,vue}]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
